generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id
  name           String
  email          String
  emailVerified  Boolean          @default(false)
  role           Role             @default(USER)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now()) @updatedAt
  sessions       Session[]
  accounts       Account[]
  orders         Orders[]
  favouriteFoods FavouriteFoods[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Foods {
  id        String       @id @default(cuid())
  name      String
  price     Float
  category  FoodCategory @default(NORMAL)
  imageUrl  String?
  createdAt DateTime     @default(now())

  orders         Orders[]
  favouriteFoods FavouriteFoods[]

  dailyMenuItems DailyMenuItems[]
}

// This model represents the menu for a specific day
model DailyMenu {
  id        String           @id @default(cuid())
  date      DateTime         @db.Date
  name      String? // Optional name like "Tuesday Lunch Specials"
  day       DAY?             @default(MONDAY)
  createdAt DateTime         @default(now())
  items     DailyMenuItems[]
}

// This is the "join table" that connects a DailyMenu to a Food
model DailyMenuItems {
  id          String    @id @default(cuid())
  dailyMenuId String
  dailyMenu   DailyMenu @relation(fields: [dailyMenuId], references: [id], onDelete: Cascade)
  foodId      String
  food        Foods     @relation(fields: [foodId], references: [id], onDelete: Cascade)

  // Ensures a food can only be added once to the same daily menu
  @@unique([dailyMenuId, foodId])
}

model FavouriteFoods {
  id     String @id @default(cuid())
  userId String
  foodId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  food   Foods  @relation(fields: [foodId], references: [id], onDelete: Cascade)

  // This ensures a user can only favorite a specific food once.
  @@unique([userId, foodId])
}

model Orders {
  id            String        @id @default(cuid())
  userId        String
  foodId        String
  quantity      Int
  batchId       String
  bonoNumber    Int?
  orderStatus   OrderStatus   @default(PENDING)
  totalPrice    Float
  paymentStatus PaymentStatus @default(NOTPAID)
  createdAt     DateTime      @default(now())

  user User  @relation(fields: [userId], references: [id], onDelete: Restrict)
  food Foods @relation(fields: [foodId], references: [id], onDelete: Restrict)
}

enum DAY {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum Role {
  USER
  ADMIN
  CASHIER
}

enum FoodCategory {
  NORMAL
  SPECIAL
  HOTDRINK
  JUICE
}

enum OrderStatus {
  PENDING
  ACCEPTED
  REJECTED
  FAILED
  COMPLETED
  DEILVERED
  RETURNED
}

enum PaymentStatus {
  PAID
  NOTPAID
}
